<Window x:Class="KinectHandTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect 2.0 Hand Tracking" Height="800" Width="1200" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Background="Black">
        <Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="camera" />
                <Canvas Name="canvas" />
            </Grid>
        </Viewbox>
        <Grid Style="{StaticResource ContainerStyle}">
            <StackPanel Margin="20">
                <TextBlock Text="Tracking Data" Style="{StaticResource TitleStyle}" FontSize="55" TextDecorations="{x:Null}" FontFamily="Segoe UI Light" Foreground="#FF91D694" />
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Right hand" Style="{StaticResource TitleStyle}" FontSize="35" FontFamily="Segoe WP" TextDecorations="{x:Null}" Foreground="#FF5DB2EC" />
                    <TextBlock Name="tblRightHandPosition" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                    <TextBlock Name="tblRightHandState" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Left hand" Style="{StaticResource TitleStyle}" FontSize="35" FontFamily="Segoe WP" Foreground="#FF5DB2EC" />
                    <TextBlock Name="tblLeftHandPosition" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                    <TextBlock Name="tblLeftHandState" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Miscelaneous" Style="{StaticResource TitleStyle}" FontSize="35" FontFamily="Segoe WP" Foreground="#FF5DB2EC" />
                    <TextBlock Name="tblHandDistance" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                    <TextBlock Name="tblHandBothStatus" Text="-" Style="{StaticResource StateStyle}" FontSize="20" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox x:Name="showColorCamera" Content="Camera" ClickMode="Hover" Foreground="White" Margin="0,10,10,10" IsChecked="True" />
                <CheckBox x:Name="showSkeleton" Content="Skeleton" ClickMode="Hover" Foreground="White" Margin="0,10,10,10" />
                <CheckBox x:Name="enableControl" Content="Control" ClickMode="Hover" Foreground="White" Margin="0,10,10,10" IsChecked="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
